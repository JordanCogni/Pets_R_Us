@model PetImageTablesVM

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white text-center">Upload Furry Friend</h1>

<h4 class="text-white">Pet Images</h4>
<hr />
<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PetPic" class="control-label"></label>
                <input asp-for="PetPic" class="form-control" />
                <span asp-validation-for="PetPic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageTitle" class="control-label"></label>
                <input asp-for="ImageTitle" class="form-control" />
                <span asp-validation-for="ImageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageCaption" class="control-label"></label>
                <input asp-for="ImageCaption" class="form-control" />
                <span asp-validation-for="ImageCaption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="PetImage" class="custom-file-input" id="customFile" />
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="PetImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>