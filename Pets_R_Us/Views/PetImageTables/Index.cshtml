@model IEnumerable<PetImageTablesVM>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
<h1 class="text-center">PET PHOTOS</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-arrow-up-from-bracket"></i> <b>Upload</b></a>
</p>
    <div class="row">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="shadow-lg p-3 mb-5 bg-white rounded">
                        <div class="card h-100">
                            <img src="@item.PetImageUrl" class="card-img-top" style="height: 450px">
                            <div class="card-body" style="color:black">
                                <h5 class="card-title">@item.ImageTitle</h5>
                                <p class="card-text">@item.ImageCaption</p>
                            </div>
                            <div class="card-footer">
                                <div class="row" style="justify-content:right">
                                    <button data-id="@item.Id" class="btn btn-outline-danger deleteBtn" type="button"><i class="fa-regular fa-trash-can"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
        
<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="petImageId" name="Id"/>
</form>

@section Scripts{
    <script>
        $(function(){
            $(".deleteBtn").click(function(e){
                swal({
                    title: "Are you sure?",
                    text: "Are you sure you want to delete this picture?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if(confirm){
                        var btn = $(this);
                        var id = btn.data("id");
                        $("#petImageId").val(id);
                        $("#deleteForm").submit();
                    }
                });
            });
        });

    </script>
}
