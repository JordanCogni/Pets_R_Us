@model PlayDateVM

@{
    ViewData["Title"] = "Edit";
}

<div class="row" style="justify-content:center">
    <div class="box-shadow2">

        <h2 class="text-center">Edit A Playdate Request</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestDate" class="control-label"></label>
                <input asp-for="RequestDate" class="form-control" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ReceivingUserId" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Users" />
            <input type="hidden" asp-for="Attending" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" type="button" class="btn btn-danger">Back</a>
            </div>
        </form>
    </div>
</div>



